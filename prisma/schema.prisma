generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String      @id @default(cuid())
  email             String      @unique
  name              String?
  createdAt         DateTime    @default(now())
  
  proposals         Proposal[]
}

model Proposal {
  id                String      @id @default(cuid())
  userId            String
  jobTitle          String
  jobDescription    String
  content           String
  confidence        Float
  wordCount         Int
  aiModel           String      @default("demo")
  status            String      @default("draft")
  createdAt         DateTime    @default(now())
  
  user              User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
}